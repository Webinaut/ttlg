---
import { Image } from "astro:assets";
import vivpic from "/assets/images/VivRowdenTTLGBackground.png";
import HomeIcon from "../components/CarbonHome.astro";
---

<div id="home"></div>
<div class="container-fluid navigation">
  <div class="hamburger">
    <span class="bar"></span>
    <span class="bar"></span>
    <span class="bar"></span>
  </div>

  <div class="main-nav">
    <nav>
      <ul>
        <li>
          <a href="#home"><HomeIcon /></a>
        </li>
        <li>
          <a href="#research">Research</a>
        </li>
        <li>
          <a href="#planning">Planning</a>
        </li>
        <li>
          <a href="#contact">Contact</a>
        </li>
      </ul>
    </nav>
  </div>
</div>

<div class="container-fluid header-grid">
  <div class="hero1">
    <h1>through the</h1>
  </div>
  <div class="hero2">
    <h1>looking glass</h1>
  </div>
  <!-- <div class="image_bottom">
    <Image src={mirror} alt="Mirror" />
  </div> -->
  <div class="image_top">
    <Image src={vivpic} alt="Vivian Rowden" />
  </div>
</div>

<style lang="scss">
  .container-fluid {
    // background-color: var(--pico-primary-background);
    &.header-grid {
      display: grid;
      grid-template-columns: repeat(12, 1fr);
      grid-auto-rows: minmax(10px, auto);
      grid-gap: 5px;
      background-image: url(../../assets/images/MirrorBackground.jpeg);
      background-size: cover;
      background-position: 0px 800px;
      padding: 20px 0 0 20px;
      animation: slideUp 2s 3s ease-in-out forwards;
      @keyframes slideUp {
        0% {
          background-position: 0px 800px;
        }
        100% {
          background-position: 0px 0px;
        }
      }
    }
  }
  .main-nav {
    background-color: transparent;
  }
  h1 {
    font-size: 12vw;
    line-height: 0.9em;
    // color: var(--pico-text-selection-color);
    text-transform: lowercase;
    margin: 0;
    // color: #fff;
  }
  .hero1 {
    grid-area: 2 / 1 / 3 / span 12;
    margin-left: 1em;
    opacity: 0;
    animation: fadeIn 2s 1s ease-in-out forwards;
    @keyframes fadeIn {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }
    & h1 {
      z-index: 3;
      animation: colorChange 0.5s 7s linear forwards;
      @keyframes colorChange {
        0% {
        }
        100% {
          color: #fff;
        }
      }
    }
  }
  .hero2 {
    grid-area: 3 / 1 / 4 / span 12;
    margin-left: 1em;
    margin-bottom: 1em;
    z-index: 4;
    opacity: 0;
    animation: fadeIn 2s 2.5s ease-in-out forwards;
    @keyframes fadeIn {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }
    & h1 {
      z-index: 3;
      animation: colorChange 0.5s 7s linear forwards;
      @keyframes colorChange {
        0% {
        }
        100% {
          color: #fff;
        }
      }
    }
  }
  .image_top {
    img {
      filter: grayscale(1);
      max-height: 90vh;
      width: 100%;
      z-index: 5;
    }
    // z-index: 6;
    grid-area: 1 / 9 / span 3 / span 4;
    // width: 90%;
    justify-self: end;
    opacity: 0;
    animation: fadeIn 3s 5s ease-in-out forwards;
    @keyframes fadeIn {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }
  }

  // #home {
  //   // background-color: var(--pico-primary-background);
  //   background-image: url(../../assets/images/MirrorBackground.jpeg);
  // }
  .container-fluid.main-nav {
    justify-content: flex-start;
  }
  .container-fluid.navigation {
    display: flex;
    justify-content: flex-start;
    position: fixed;
    top: 0;
    z-index: 10;
    background-color: transparent;
  }
  .main-nav {
    > nav {
      display: flex;
      background-color: var(--pico-primary);
    }
    & ul {
      // display: block;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      margin: 0;
      padding: 0.5rem 0 0 0.5rem;
    }
  }
  .main-nav ul li {
    list-style-type: none;
    & a:where(a:not([role="button"])) {
      color: var(--pico-primary-inverse);
      &:hover {
        cursor: pointer;
        color: var(--pico-text-selection-color);
      }
    }
  }
  .hamburger {
    display: block;
    cursor: pointer;
  }
  .expanded {
    display: unset;
  }
  .hamburger.expanded .bar:nth-child(2) {
    opacity: 0;
  }
  .hamburger.expanded .bar:nth-child(1) {
    transform: translateY(10px) rotate(45deg);
  }
  .hamburger.expanded .bar:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }

  .bar {
    display: block;
    width: 33px;
    height: 4px;
    margin-bottom: 5px;
    background: var(--pico-primary-inverse);
    border-radius: 3px;
    -webkit-transition: all 0.3s ease;
    transition: all 0.3s ease;
  }

  .main-nav {
    display: none;
  }
  .main-nav.expanded {
    z-index: 1;
    background: var(--pico-primary);
    padding: 0.5em;
    border: solid var(--pico-primary-inverse);
    border-width: 2px 0 0 0;
    box-shadow: 0px 4px 10px -2px rgba(0, 0, 0, 0.1);
    display: block;
    position: absolute;
    top: 75px;
  }
</style>
<script>
  // Toggle Hamburger Menu
  document.querySelector(".hamburger").addEventListener("click", () => {
    document.querySelector(".main-nav").classList.toggle("expanded");
    document.querySelector(".hamburger").classList.toggle("expanded");
  });
  document.querySelector(".main-nav").addEventListener("click", () => {
    document.querySelector(".main-nav").classList.toggle("expanded");
    document.querySelector(".hamburger").classList.toggle("expanded");
  });
</script>
