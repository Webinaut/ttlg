---
import { Image } from "astro:assets";
import vivimage from "/assets/images/VivRowdenRound.png";
import Frame from "../components/LookingGlass.astro";
// const { pageTitle } = Astro.props;
---

<header>
  <div class="hero-grid">
    <h1 class="hero1">through the</h1>
    <div class="vivpic">
      <Frame />
      <Image src={vivimage} alt="Viv Rowden" />
    </div>
    <h1 class="hero2">looking glass</h1>
  </div>
</header>
<style lang="scss">
  @import "../styles/_style.scss";
  header {
    max-width: 100vw;
    padding-top: 0;
  }
  .hero-grid {
    background-color: var(--pico-primary-background);
    padding: 0 5% 8rem;
    overflow: hidden;
    display: grid;
    grid-template-columns: repeat(6, minmax(250px, 1fr));
    /* grid-template-columns: repeat(6, 1fr); */
    grid-template-rows: repeat(2, 18rem);
  }
  .hero1 {
    grid-area: 1/2/1/5;

    // grid-row: 2/3;
    // grid-column: 1/5;
  }
  .hero2 {
    grid-area: 2/3/1/5;

    // grid-row: 3/4;
    // grid-column: 1/5;
  }
  .vivpic {
    grid-area: 1/3/3/4;
    > img {
      max-width: 100%;
      height: auto;
    }
  }
  h1 {
    font-size: 16rem;
    text-transform: lowercase;
    /* max-width: 80%; */
    /* overflow-wrap: break-word; */
  }
</style>
